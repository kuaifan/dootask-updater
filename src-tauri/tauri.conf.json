{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "DooTask Updater",
    "version": "0.1.0",
    "identifier": "com.dootask.updater",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "",
                "width": 310,
                "height": 150,
                "center": true,
                "resizable": false,
                "maximizable": false,
                "decorations": true,
                "transparent": true,
                "alwaysOnTop": true,
                "dragDropEnabled": false,
                "fullscreen": false,
                "visible": true
            }
        ],
        "macOSPrivateApi": true,
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.icns",
            "icons/icon.ico",
            "icons/icon.png"
        ]
    }
}
